<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Customization for the sale.order form view -->
    <record id="sale_inherit_view" model="ir.ui.view">
        <field name="name">sale.amount.inherit.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="sale_amount" string="Sale Amount"/>
            </xpath>
           <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
               <field name="checker"/>
           </xpath>
            <xpath expr="//field[@name='sale_amount']" position="after">
                <field name="ticker"/>
            </xpath>
        </field>
    </record>

       <record id="sale_inherit_tree_view" model="ir.ui.view">
        <field name="name">sale.amount.inherit.tree.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="after">
                <field name="ticker"/>
            </xpath>
        </field>
    </record>

</odoo>
