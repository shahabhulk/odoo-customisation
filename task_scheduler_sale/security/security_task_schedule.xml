    <!-- Assign users to the appropriate groups -->
    <record model="res.users" id="user_sales_visible_amount">
        <field name="name">User Amount</field>
        <field name="login">user_amount</field>
        <field name="groups_id" eval="[(4, ref('base.group_user')),(4, ref('group_sale_amount_visible'))]"/>
    </record>

